              </div>

              <div className="space-y-3 py-4 border-t border-white/10">
                <div className="flex justify-between text-gray-400 text-sm">
                  <span>{t('Subtotal', language)}</span>
                  <span className="text-white">{formatPrice(subtotal, currency)}</span>
                </div>
                <div className="flex justify-between text-gray-400 text-sm">
                  <span>{t('Shipping', language)}</span>
                  <span className="text-white">
                    {shipping === 0 ? <span className="text-green-400 font-medium">{t('FREE', language)}</span> : formatPrice(shipping, currency)}
                  </span>
                </div>
                <div className="flex justify-between text-lg font-bold pt-3 border-t border-white/10">
                  <span className="text-white">{t('Total', language)}</span>
                  <span className="text-neon-cyan">{formatPrice(total, currency)}</span>
                </div>
              </div>

              <button
                onClick={() => onProcessPayment(paymentMethod)}
                disabled={isProcessing}
                className="w-full mt-6 bg-gradient-to-r from-neon-cyan to-neon-purple hover:from-neon-purple hover:to-neon-cyan text-black font-bold py-4 rounded-xl transition-all duration-300 flex items-center justify-center gap-2 disabled:opacity-50 shadow-lg text-lg"
              >
                {isProcessing ? (
                  <>
                    <Loader2 className="animate-spin" size={20}/>
                    <span>{t('Processing Payment...', language)}</span>
                  </>
                ) : (
                  <>
                    <Lock size={20}/>
                    <span>{t('Pay Now', language)} {formatPrice(total, currency)}</span>
                  </>
                )}
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  );
};

export default App;